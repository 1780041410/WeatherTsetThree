<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/now_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <TextView
        android:id="@+id/null_one"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/null_one"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:hint="温度" />

    <TextView
        android:id="@+id/current_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/current_temperature"
        android:layout_toRightOf="@+id/current_temperature"
        android:hint="阵雨"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/current_temperature"
        android:orientation="vertical" >
		
        <TextView
        android:id="@+id/people_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="体感温度：11"
        android:textColor="@color/white"
        android:textSize="20sp" />
        <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风力"
        android:textColor="@color/white"
        android:textSize="20sp" />
        <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="湿度：91%"
        android:textColor="@color/white"
        android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/speechviem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/current_weather"
        android:layout_alignParentRight="true"
        android:src="@drawable/voice_empty" />

</RelativeLayout>
